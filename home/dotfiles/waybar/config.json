{
  "height": 32,
  "spacing": 6,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock",
    "custom/spotify"
  ],
  "modules-right": [
    "pulseaudio",
    "battery",
    "hyprland/language",
    "tray"
  ],
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}"
  },
    "custom/spotify": {
    "format": "üîä {}",
    "return-type": "plain",
    "exec": "playerctl metadata --format '{{title}} ‚Äî {{artist}}' || echo 'Not playing'",
    "interval": 3,
    "max-length": 40,
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },
  "hyprland/language": {
    "format": "{}",
    "format-en": "en",
    "format-ru": "ru",
    "keyboard-name": "at-translated-set-2-keyboard",
    "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next; pkill -SIGRTMIN+10 waybar"

  },
  "clock": {
